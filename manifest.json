{
    "manifest_version": 3,
    "name": "HelpMeOOO",
    "description": "It records the user's screen",
    "icons": {
        "128": "icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "indexes.html",
        "default_icon": "icon.png"
    },

    "host_permissions": [
        "http://*/",
        "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "version": "1.0.0"
}